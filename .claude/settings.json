{
    "cleanupPeriodDays": 30,
    "includeCoAuthoredBy": false,
    "outputStyle": "default",
    "permissions": {
        "allow": [
            "Bash(find:*)",
            "Bash(mkdir:*)",
            "Bash(mv:*)",
            "Bash(ls:*)",
            "Bash(rg:*)",
            "Bash(git add:*)",
            "Bash(git branch:*)",
            "Bash(git checkout:*)",
            "Bash(git commit:*)",
            "Bash(git fetch:*)",
            "Bash(git ls-tree:*)",
            "Bash(git pull:*)",
            "Bash(git push:*)",
            "Bash(git rev-parse:*)",
            "Bash(gh pr create:*)",
            "Bash(gh pr edit:*)",
            "Bash(gh pr list:*)",
            "Bash(gh pr view:*)"
        ],
        "deny": [
            "Bash(sudo:*)",
            "Bash(rm:*)",
            "Bash(rm -rf:*)",
            "Bash(curl:*)",
            "Bash(git push -f:*)",
            "Bash(git reset:*)",
            "Bash(git rebase:*)",
            "Bash(git commit --amend:*)",
            "Read(.env.*)",
            "Write(.env*)",
            "Read(./Library/**)",
            "WebFetch(domain:*)"
        ]
    },
    "hooks": {
        "Stop": [
            {
                "matcher": "*",
                "hooks": [
                    {
                        "type": "command",
                        "command": "osascript -e 'display notification \"Task completed\" with title \"Claude Code\" sound name \"Bip\"'"
                    }
                ]
            }
        ],
        "Notification": [
            {
                "matcher": "*",
                "hooks": [
                    {
                        "type": "command",
                        "command": "osascript -e 'display notification \"Awaiting confirmation\" with title \"Claude Code\" sound name \"Bip\"'"
                    }
                ]
            }
        ]
    }
}